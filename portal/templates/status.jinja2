<!DOCTYPE html>
<html>
<head>

  <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/@mdi/font@4.x/css/materialdesignicons.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/vuetify@2.x/dist/vuetify.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/vue@2.x/dist/vue.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vuetify@2.x/dist/vuetify.js"></script>
    <script src="https://unpkg.com/marked@0.3.6"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/lodash@4.17.15/lodash.min.js"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, minimal-ui">
</head>
<body>
{%include 'header.jinja2'%}

<div id="app">
    <v-container>
        <v-app id="inspire">
                <v-toolbar color="" :dark=false>
                 <v-toolbar-title></v-toolbar-title>
                 <v-spacer></v-spacer>
                        <v-btn class="mr-2" href="/add"> Submit Another Dataset </v-btn>
                        <v-btn >
                          Browse Datasets
                        </v-btn>
                </v-toolbar>

            <v-content>
                <v-layout left-justify>
                    <v-flex xs20 sm12>
                        <v-toolbar color="primary" dark>
                            <v-toolbar-title>Dataset Status</v-toolbar-title>
      
                            <v-spacer></v-spacer>
                        </v-toolbar>
                        <v-container fluid fill-width>
                        {% if status_res.status.active == true %}
                        <v-chip
                                  class="ma-2"
                                  color="primary"
                                  text-color="white"
                                  label
                                >
                                  Active
                                </v-chip>
                        {% else %}
                                <v-chip
                                  class="ma-2"
                                  color="red"
                                  text-color="white"
                                  label
                                >
                                  Inactive
                                </v-chip>
                        {% endif %}

                         {% if status_res.success == true %}
                                
                            <h3>Status for submission: {{status_res.status.source_id}}</h3>
                        {% else %}
                            <h3>Status unavailable for submission</h3>
                        {% endif %}

  {% if status_res.success == true %}

  {% for result in status_res.status.status_list %}
  <v-card class="ma-2">
  <v-card-text> {{result.text}}</v-card-text>
  <v-card-actions>
   {% if result.signal == "success" %}
      <v-chip label outlined color="green">{{result.signal}}</v-chip>
  {% elif result.signal == "idle" %}
    <v-chip label outlined dark> {{result.signal}}</v-chip>
  {% elif result.signal == "started" %}
    <v-chip label outlined color="blue">{{result.signal}}</v-chip>
  {% elif result.signal == "warning" %}
    <v-chip label outlined color="orange">{{result.signal}}</v-chip>
  {% elif result.signal == "failure" %}
    <v-chip label outlined color="red">{{result.signal}}</v-chip>
  {% else %}
    <v-chip label outlined dark">{{result.signal}}</v-chip>
  {% endif %}
  <a href="result.link">{{result.link}}</a>

  </v-card-actions>
  </v-card>
  

  {% endfor %}
  {% endif %}

                        </v-container>
        </v-app>
    </div>
    </v-content>
    </v-container>

    <script>
    Vue.use(Vuetify)

    new Vue({
        el: '#app',
        vuetify: new Vuetify()
    })
    </script>
</body>

</html>
