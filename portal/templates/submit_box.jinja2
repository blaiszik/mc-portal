{%extends "base.jinja2"%}

{%block title%}Add Dataset{%endblock%}

{%block body%}

<h1> Add a New Dataset </h1>

<!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="container fuelux">
<form class="was-validated">
    {{ form.hidden_tag() }}
    {{ form.auth() }} {{ form.file_id }}
  <!-- Title -->
  <div class="form-group form-group-lg">
    <label id="titleLabel" for="textinput" class="control-label col-sm-2">Title *</label>
    <div class="col-sm-10">
      {{ form.titleInput(class_="form-control is-valid", placeholder_="My Dataset Title") }}
      <p class="help-block"></p>
    </div>
  </div>


  <!-- Author -->
  <div class="form-group">
    <label id="authorLabel" for="authorPillbox" class="control-label col-sm-2">Authors *</label>
    <div class="col-sm-10">
    <div class="pillbox" id="authorPillbox">
          <ul class="clearfix pill-group">
            <li class="pillbox-input-wrap btn-group">
              <a class="pillbox-more">and <span class="pillbox-more-count"></span> more...</a>
                {{ form.name(class_="form-control dropdown-toggle pillbox-add-item", placeholder_="add author") }}
              <button type="button" class="dropdown-toggle sr-only">
                <span class="caret"></span>
                <span class="sr-only">Toggle Dropdown</span>
              </button>
              <ul class="suggest dropdown-menu" role="menu" data-toggle="dropdown" data-flip="auto"></ul>
            </li>
          </ul>
        </div>
      <p class="help-block">Add authors in the form of Einstein, Albert or Marie S. Curie. Press 'Enter/Return' to create a new entry.</p>
    </div>
  </div>

  <!-- Institutions -->
  <div class="form-group">
    <label for="institutionPillbox" class="control-label col-sm-2">Institutions</label>
    <div class="col-sm-10">
    <div class="pillbox" id="institutionPillbox">
          <ul class="clearfix pill-group">
            <li class="pillbox-input-wrap btn-group">
              <a class="pillbox-more">and <span class="pillbox-more-count"></span> more...</a>
              <input type="text" class="form-control dropdown-toggle pillbox-add-item" placeholder="add institution">
              <button type="button" class="dropdown-toggle sr-only">
                <span class="caret"></span>
                <span class="sr-only">Toggle Dropdown</span>
              </button>
              <ul class="suggest dropdown-menu" role="menu" data-toggle="dropdown" data-flip="auto"></ul>
            </li>
          </ul>
        </div>
      <p class="help-block">Add author institutions. If all are the same, just add once. Press 'Enter/Return' to create a new entry.</p>
    </div>
  </div>
  <!--  /Institutions -->

  <!-- Tags -->
  <div class="form-group">
    <label for="tagsPillbox" class="control-label col-sm-2">Tags</label>
    <div class="col-sm-10">
    <div class="pillbox" id="tagsPillbox">
          <ul class="clearfix pill-group">
            <li class="pillbox-input-wrap btn-group">
              <a class="pillbox-more">and <span class="pillbox-more-count"></span> more...</a>
              <input id="tagsAddItemInput" type="text" class="form-control dropdown-toggle pillbox-add-item" placeholder="add tag">
              <button type="button" class="dropdown-toggle sr-only">
                <span class="caret"></span>
                <span class="sr-only">Toggle Dropdown</span>
              </button>
              <ul class="suggest dropdown-menu" role="menu" data-toggle="dropdown" data-flip="auto"></ul>
            </li>
          </ul>
        </div>
      <p class="help-block">Add some tags to help users find the data</p>
    </div>
  </div>
  <!-- /Tags -->

 <!-- Description -->
  <div class="form-group">
    <label for="tagsPillbox" class="control-label col-sm-2">Description</label>
    <div class="col-sm-10">
              <textarea class="form-control" rows="5" id="descriptionInput"></textarea>
      <p class="help-block">Add a dataset description. Feel free to use <a href="https://help.github.com/articles/basic-writing-and-formatting-syntax/" target="_blank">markdown</a>.</p>
    </div>
  </div>
  <!-- /Tags -->

  
<!-- Services -->
<div class="form-group">
  <label for="checkboxes" class="control-label col-sm-2">Sync Data</label>
  <div class=" col-sm-10">
    <div class="checkbox">
      <label class="checkbox-custom" data-initialize="checkbox" id="check-0">
        <input class="sr-only" name="checkboxes" type="checkbox" value="MDF Publish" id="publishCheck">
        <span class="checkbox-label">MDF Publish</span>
      </label>
    </div><div class="checkbox">
      <label class="checkbox-custom" data-initialize="checkbox" id="check-1">
        <input class="sr-only" name="checkboxes" type="checkbox" value="Materials Resource Registry" id="mrrCheck">
        <span class="checkbox-label">Materials Resource Registry</span>
      </label>
    </div><div class="checkbox">
      <label class="checkbox-custom" data-initialize="checkbox" id="check-2">
        <input class="sr-only" name="checkboxes" type="checkbox" value="Citrination" id="citrinationCheck">
        <span class="checkbox-label">Citrination</span>
      </label>
    </div>
  </div>
</div>
<!-- /Services -->
</form>



<form>

<!-- Submit Button -->
<div class="form-group">
            {{ form.submit(class_="btn btn-primary btn-lg")  }}
</div>
</form>

<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="advancedPanel">
      <h4 class="panel-title">
        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Advanced Options
        </a>
      </h4>
    </div>
    <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
      <div class="panel-body">
      <p>
       ** Coming soon -- submit to AFRL Additive Manufacturing Challenge
       </p>
       <p>
       ** Coming soon -- submit to NIST PFHub
       </p>
      </div>
    </div>
  </div>
</div>


<!-- User Alerts -->
<div id="successAlert" class="alert alert-success invisible" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <h3> <strong>Success:</strong> Dataset has been submitted.</h3>
  <div class="row">
    <div class="col-md-2"> 
          <a id="successLink" class="btn btn-success btn-lg" href="">Track Progress</a></h4>
    </div>
    <div class="col-md-4 col-md-2">
      <a class="btn btn-default btn-lg" href="/add">Submit Another Dataset</a>
    </div>
  </div>
</div>

<div class="alert alert-danger alert-dismissible invisible" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <h3> Whoops, something went wrong with the submission</h3>
  <div id="debugMessage">Debug details here</div>
</div>
<!-- /User Alerts -->


      </div>
    </div>






{%endblock%}
